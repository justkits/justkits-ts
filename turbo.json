{
  "$schema": "https://v2-7-6.turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "**/tsconfig*.json", "package.json"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig*.json", "package.json"],
      "outputs": []
    },
    "test": {
      "inputs": [
        "src/**",
        "tests/**",
        "**/*.test.ts",
        "vitest.config.ts",
        "package.json"
      ],
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {}
  }
}
