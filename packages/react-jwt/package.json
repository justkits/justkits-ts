{
  "name": "@justkits/react-jwt",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "description": "Justkits React JWT Package",
  "author": "JustWon",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justkits/justkits-ts.git"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "react",
    "typescript",
    "auth",
    "jwt"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:dev": "vitest --watch --coverage"
  },
  "devDependencies": {
    "@justkits/eslint-config": "workspace:*",
    "@justkits/tsconfig": "workspace:*",
    "@justkits/vitest-config": "workspace:*",
    "@testing-library/react": "^16",
    "@types/node": "catalog:",
    "@types/react": "^19",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "jsdom": "^26",
    "tsup": "^8.5.1",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5",
    "axios": "^1.13.5",
    "react": "^19"
  },
  "lint-staged": {
    "*.{yml,yaml}": "prettier --check",
    "*.{js,mjs,cjs,ts,mts,cts,json,jsonc,json5,md,css,tsx,jsx}": [
      "eslint",
      "prettier --check"
    ]
  }
}
