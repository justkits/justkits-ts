{
  "extends": "@justkits/tsconfig/base.json",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@lib/*": ["lib/*"],
      "@managers/*": ["managers/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
